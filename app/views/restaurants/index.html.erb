<br>
<% if @restaurants.any? %>
  <% @restaurants.each do |restaurant| %>
<div>
    <%= link_to restaurant.name, restaurant_path(restaurant) %> - <h3>Average rating: <%= star_rating(restaurant.average_rating) %></h3>
    <% if @current_user %>
    <%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %> |
    <%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete %> |
    <% if !@current_user.has_reviewed?(restaurant) %>
    <%= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant) %> 
    <% end %>
    <% end %>
    <br>
    <%  getReviews(restaurant.id) %>
    <%  @reviews.each do |review| %>
    <%= review.thoughts %> -
    <%= review.rating %>
    <p><%= pluralize review.endorsements.count, 'endorsement' %></p>
    <br>
</div>
    <% end %>

  <% end %>
<% else %>
  <h1>No restaurants added yet</h1>
<% end %>
<div>
<br>
<a href='/restaurants/new'>Add a restaurant</a>
</div>
